	<div class="panel panel-default">
		<div class="panel-heading">Crea tu contraseña</div>
		<div class="panel-body">
			<% if(email){ %>
				<p>Escribe la nueva contraeña para el usuario <b><%= email %></b> de <u>tipo gestor académico</u>.</p>
			<% } %>
			<div style="margin: 0% 40% 0% 40%">
				<form method="post" action="/manage/createpassword?_method=put">
					<hr>
					<input autofocus type="password" name="put_password" class="form-control" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}" placeholder="Nueva contraseña">
					<hr>
					<input type="submit" class="btn btn-default" value="Crear contraseña">
					<input type="hidden" name="token" value="<%= token %>">
				</form>
			</div>
		</div>
	</div>
