<!DOCTYPE html>
<html>
<head></head>
<body>
	<div class="panel panel-default">
		<div class="panel-heading">Gentión de usuarios</div>
		<div class="panel-body">
			<div>
				<form method="post" action="manager">
					<div class="row">
						<div class="col-md-3"><label>Nuevo manager:</label></div>
						<div class="col-md-3"><input required autofocus class="form-control" type="text" placeholder="Nombre" name="email"/></div>
						<div class="col-md-3"><input required class="form-control" type="password" name="password" placeholder="Contraseña"></div>
						<div class="col-md-3"><input class="btn btn-default" type="submit" value="Registrar"></div>
					</div>
				</form>
			</div>
			<br>
			<table class="table table-striped">
				<tr>
					<th>ID</th>
					<th>Email</th>
					<th>Nombre</th>
					<th>Apellido</th>
					<th>Tipo</th>
					<th>Fecha de creación</th>
					<th></th>
					<th></th>
				</tr>
				<% var i; for (i=0; i < users.length; i++) { %>        
					<tr>
						<td><%= users[i].id %></td>
						<td><%= users[i].email %></td>
						<td><% if (users[i].role === "SUDENT") { %> <%= users[i].name %> <% } %></td>
						<td><% if (users[i].role === "STUDENT") { %> <%= users[i].surname %> <% } %></td>
						<td>
							<% if (users[i].role === "ADMIN") { %> Administrador <% } %>
							<% if (users[i].role === "MANAGER") { %> Gestor <% } %>
							<% if (users[i].role === "STUDENT") { %> Estudiante <% } %>
						</td>
						<td><%= users[i].createdAt.toISOString().replace(/T/, ' ').replace(/\..+/, '') %></td>
						<td>
							<form method="post" action="/manager/<%= users[i].id %>/edit?_method=get">
								<button class="btn btn-default" type="submit">Editar</button>
							</form>
						</td>
						<td>
							<form method="post" action="/manager/<%= users[i].id %>?_method=delete">
								<button class="btn btn-default" type="submit" onClick="return confirm('Borrar: <%= users[i].email %>');">X</button>
							</form>
						</td>
					</tr>
				<% } %>
			</table>
		</div>
	</div>
</body>
</html>