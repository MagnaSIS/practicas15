	<div class="panel panel-default">
		<div class="panel-heading">Crear asignatura</div>
		<div class="panel-body">
			<div style="margin: 0% 30% 0% 30%">
				<form method="post" action="/course/create">
					<div class="row">
						<div class="col-md-6">
							<label for="name">Nombre Asignatura:<span class="required">*</span></label>
						</div>
						<div class="col-md-6">
							<input class="form-control"type="text" id="name" name="course[name]" placeholder="Nombre" pattern="(^[a-zA-Z]{1,20}$)" required="required" autofocus="autofocus"/>
						</div>
					</div>
					<hr>
					<div class="row">
						<div class="col-md-6">
							<label for="creditos">Número Créditos:<span class="required">*</span></label>
						</div>
						<div class="col-md-6">
							<input class="form-control" type="creditos" id="creditos" name="course[credits]" placeholder="Creditos" required="required"/>
						</div>
					</div>
					<hr>
					<div class="row">
						<div class="col-md-6">
							<label for="especialidad">Especialidad:</label>
						</div>
						<div class="col-md-6">
							<select class="form-control" id="especialidad" name="course[specialisation]">
								<option value="C" <% if (course.specialisation === "C") { %> selected <% } %> >Computación</option>
								<option value="IC" <% if (course.specialisation === "IC") { %> selected <% } %> >Ingeniería de Computadores</option>
								<option value="IS" <% if (course.specialisation === "IS") { %> selected <% } %> >Ingeniería del Software</option>
							</select>
						</div>
					</div>
					<hr>
					<div class="row">
						<div class="col-md-6">
							<label for="plazas">Número plazas: <span class="required">*</span></label>
						</div>
						<div class="col-md-6">
							<input class="form-control" type="text" id="plazas" name="course[vacancies]" placeholder="Número de plazas" required="required" autofocus="autofocus"/>
						</div>
					</div>
					<hr>
					<div class="row">
						<div class="col-md-6">
							<label for="descripcion">Descripción: <span class="required">*</span></label>
						</div>
						<div class="col-md-6">
							<textarea class="form-control" id="message" name="course[description]" value="<%= course.description %>" placeholder="Escribe la descripción de la asignatura." required="required"></textarea>
						</div>
					</div>
					<hr>
					<div class="row">
						<input class="btn btn-default" type="submit" value="Enviar" id="submit"/>
					</div>
				</form>
			</div>
		</div>
	</div>
